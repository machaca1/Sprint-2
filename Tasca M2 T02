#EXERCICI5
print('EXERCICI 5')

def num_pos(lista):
    tamaño=len(lista)
    print('De la lista',lista,'coinciden en valor y posicion los siguientes numeros:',end=' ')
    for i in range(0,tamaño):
        if lista[i]==(i+1):
            print(i)
llista=(3,4,2,0,2,3,6)
num_pos(llista)
